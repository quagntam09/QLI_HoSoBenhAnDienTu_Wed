<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - E-HOSPITAL</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <style>
        :root {
            --primary-color: #0d6efd;
            --secondary-color: #6c757d;
            --success-color: #198754;
            --bg-light: #f3f6f9; /* Màu nền xám xanh nhẹ dịu mắt */
        }

        body {
            background-color: var(--bg-light);
            font-family: 'Inter', sans-serif; /* Font chữ hiện đại hơn */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Navbar Glassmorphism */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            padding: 12px 0;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-color) !important;
            font-size: 1.4rem;
        }

        .nav-link {
            font-weight: 500;
            color: #555;
            margin: 0 5px;
            border-radius: 6px;
            transition: all 0.2s;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--primary-color);
                background: rgba(13, 110, 253, 0.05);
            }

        /* Card Custom Style */
        .card-medical {
            border: none;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
            transition: transform 0.2s;
            background: white;
        }

        .btn-booking {
            background: linear-gradient(135deg, #0d6efd, #0099ff);
            border: none;
            color: white;
            border-radius: 50px;
            padding: 8px 25px;
            box-shadow: 0 4px 10px rgba(13, 110, 253, 0.3);
        }

            .btn-booking:hover {
                color: white;
                transform: translateY(-1px);
                box-shadow: 0 6px 15px rgba(13, 110, 253, 0.4);
            }

        /* Footer */
        footer {
            margin-top: auto;
            background-color: #fff;
            color: #666;
            border-top: 1px solid #eee;
            padding: 40px 0 20px;
        }

            footer h5 {
                color: #333;
                font-weight: 600;
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fa-solid fa-hospital-user text-primary me-2"></i>E-HOSPITAL
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Trang Chủ</a></li>

                    @if (Session["RoleID"] != null)
                    {
                        int roleId = Convert.ToInt32(Session["RoleID"]);

                        if (roleId == 1) // Admin
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger" href="#" data-bs-toggle="dropdown">Quản Trị</a>
                                <ul class="dropdown-menu border-0 shadow">
                                    <li><a class="dropdown-item" href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="@Url.Action("QuanLyNhanSu", "Admin")">Nhân sự</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("BaoCaoTaiChinh", "Admin")">Tài chính</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("SaoLuuHeThong", "Admin")">Backup Data</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("NhatKyHeThong", "Admin")">Nhật ký hệ thống</a></li>
                                </ul>
                            </li>
                        }
                        else if (roleId == 2) // Bác sĩ
                        {
                            <li class="nav-item"><a class="nav-link text-primary fw-bold" href="@Url.Action("Dashboard", "BacSi")">Lịch Khám</a></li>
                        }
                        else if (roleId == 3) // Lễ tân
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Dashboard", "LeTan")">Duyệt Lịch</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("TaoHoSoTaiQuay", "LeTan")">Đăng Ký Tại Quầy</a></li>
                        }
                        else if (roleId == 4) // Bệnh nhân
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("DatLich", "BenhNhan")">Đặt Lịch</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("LichSuKham", "BenhNhan")">Lịch sử khám</a></li>
                        }
                    }
                </ul>

                <div class="d-flex align-items-center gap-3">
                    @if (Session["UserID"] == null)
                    {
                        <a href="@Url.Action("Login", "Account")" class="fw-bold text-decoration-none me-2">Đăng Nhập</a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-primary rounded-pill px-4 btn-sm">Đăng Ký</a>
                    }
                    else
                    {
                        <div class="dropdown">
                            <a class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">
                                @{
                                    string avatarName = Session["Avatar"] as string;
                                    string avatarUrl = string.IsNullOrEmpty(avatarName) ? "/Content/Images/default-user.png" : "/Content/Images/Avatars/" + avatarName;
                                }
                                <img src="@avatarUrl" class="rounded-circle border" style="width: 35px; height: 35px; object-fit: cover;" />
                                <span class="ms-2 d-none d-md-block fw-medium">@(Session["HoTen"] ?? "User")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow mt-2">
                                <li><a class="dropdown-item" href="@Url.Action("UserProfile", "Account")"><i class="fa-regular fa-id-badge me-2"></i>Hồ sơ</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")"><i class="fa-solid fa-arrow-right-from-bracket me-2"></i>Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 100px; flex: 1; padding-bottom: 40px;">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
                <i class="fa-solid fa-check-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null || ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
                <i class="fa-solid fa-triangle-exclamation me-2"></i> @(TempData["Error"] ?? ViewBag.Error)
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </div>

    <footer>
        <div class="container text-center">
            <p class="mb-0 text-muted">&copy; @DateTime.Now.Year <strong>E-HOSPITAL System</strong>. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>