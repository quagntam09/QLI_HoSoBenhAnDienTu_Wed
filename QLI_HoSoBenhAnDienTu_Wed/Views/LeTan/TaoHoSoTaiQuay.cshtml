@model QLI_HoSoBenhAnDienTu_Wed.Models.viewsmodel.RegisterViewModel
@{ ViewBag.Title = "Tạo hồ sơ tại quầy"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="fa-solid fa-user-plus"></i> Tạo hồ sơ bệnh nhân vãng lai</h4>
        </div>
        <div class="card-body">
            @if (ViewBag.Error != null)
            {<div class="alert alert-danger">@ViewBag.Error</div>}

            <form action="/LeTan/TaoHoSoTaiQuay" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Họ và Tên (*)</label>
                        <input name="HoTen" class="form-control" required placeholder="Nhập theo CCCD">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Số điện thoại (*)</label>
                        <input name="SDT" class="form-control" required placeholder="Sẽ dùng làm Tên đăng nhập">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Ngày sinh</label>
                        <input name="NgaySinh" type="date" class="form-control">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Giới tính</label>
                        <select name="GioiTinh" class="form-control">
                            <option value="M">Nam</option>
                            <option value="F">Nữ</option>
                        </select>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <small><i class="fa fa-info-circle"></i> Hệ thống sẽ tự tạo tài khoản với <b>Tên đăng nhập = SĐT</b> và <b>Mật khẩu = SĐT</b>.</small>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check"></i> Tạo hồ sơ
                </button>
                <a href="@Url.Action("Dashboard", "LeTan")" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>